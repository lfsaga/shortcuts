{
  "manifest_version": 3,
  "name": "shortcuts",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "tabGroups"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "shortcuts"
  },
  "options_page": "src/shortcuts.html",
  "commands": {
    "pin-unpin-tab": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "pin/unpin tab"
    },
    "duplicate-tab": {
      "suggested_key": {
        "default": "Alt+D",
        "mac": "Alt+D"
      },
      "description": "duplicate tab"
    },
    "add-to-new-tab-group": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "add tab to new group"
    }
  }
}
